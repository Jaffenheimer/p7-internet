FROM node:18-alpine as node
WORKDIR /src

#Copy Files
COPY ["P7Internet.Frontend/", "P7Internet.Frontend/"]
WORKDIR P7Internet.Frontend/react-app/

RUN npm install
RUN npm run-script build

#Copy files from GitHub to nginx container
FROM nginx:alpine

COPY --from=node . .

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]

